@model BPLS.CadastroVeiculo.Aplicacao.ViewModel.VeiculoViewModel

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar Caminhão</h1>

<div>
    <div class="alert alert-warning" role="alert">
        Tem certeza de que deseja excluir?
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdVeiculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdVeiculo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdModelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modelo.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnoFabricacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoFabricacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnoModelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoModelo)
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary"> Voltar </a>
    </form>
</div>
